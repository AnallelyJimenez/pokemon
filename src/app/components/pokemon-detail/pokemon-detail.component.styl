@import 'node_modules/jeet/stylus/jeet/index'
@import url("https://fonts.googleapis.com/icon?family=Material+Icons");

// Colors
c-gray = #f2f2ff


// Styles
.material-icons
    font-family: 'Material Icons';
    font-weight: normal;
    font-style: normal;
    font-size: 24px;
    line-height: 1;
    letter-spacing: normal;
    text-transform: none;
    display: inline-block;
    white-space: nowrap;
    word-wrap: normal;
    direction: ltr;
    -moz-font-feature-settings: 'liga';
    -moz-osx-font-smoothing: grayscale;

*
    box-sizing border-box

.section
    max-width 600px
    width 100%
    margin 0 auto
    padding 2rem 1.2rem

.detail-header
    background #76D7C4
    position relative
    min-height 23rem

.btn-back
    background transparent
    padding 0
    border 0
    color white
    cursor pointer

    &:focus
        outline none

    .material-icons
        font-size  2rem

.pokemon-name
    display block
    margin 1.2rem 0 .3rem
    color white
    font-size 1.5rem
    font-weight 500
    text-transform capitalize

.elements
    margin 0
    padding 0

.mat-list-item.element
    background rgba(white, .2)
    display inline-block
    width auto
    height auto
    margin .2rem
    padding .2rem 0
    color white
    border-radius 1rem

.pokemon-image
    position absolute
    max-width 10rem
    max-height 10rem
    bottom 1rem
    left 50%
    transform translateX(-50%)
    z-index 2

    img
        max-width 100%

.detail-content
    position relative
    background white
    max-width 600px
    margin 0 auto
    border-top-right-radius 2.5rem
    border-top-left-radius 2.5rem
    transform translateY(-3rem)

.table-info
    width  100%
    margin 20px 0

.ability
    display inline-block
    text-transform capitalize
	
.ability + .ability:before
    content ','
    margin 0 5px 0 0

.progress-bar
    min-width 100px


