@import 'node_modules/jeet/stylus/jeet/index'

*
    box-sizing border-box

.section
    max-width 1200px
    width 100%
    margin 0 auto
    padding 2rem 1.2rem

.row-cards
    display flex
    flex-wrap wrap
    float none

    &:after,
    &:before
        content ''
        display block
        float none
        clear both

.pokemon-card
    col(1/2, cycle: 2)
    position relative
    background #f2f2f2
    margin-bottom .5rem
    padding  0
    border-radius 1rem

    a
        display block
        min-height 8rem
        padding 1rem
        color black
        text-decoration  none

.pokemon-card-title
    font-size 1rem
    font-weight 600
    text-transform capitalize

.type-list-items
    max-width 5rem
    margin 0
    padding 0

.mat-list-base .mat-list-item.type-list-item
    background rgba(black, .05)
    display inline-block
    width auto
    height auto
    margin .2rem 0
    padding .2rem
    font-size .8rem
    text-transform capitalize
    border-radius .3rem

.pokemon-img
    position absolute
    width 43%
    right .2rem
    bottom 0

    img
        max-width 100%
        max-height 6rem


/*  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
 *	DESKTOP AND UP
 *  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
 */

@media screen and ( min-width: 1000px )

    .section
        padding 2rem
    
    .pokemon-card
        col(1/5, uncycle: 2, cycle: 5)
        margin-bottom 2rem

@media screen and ( max-width: 1000px ) and ( min-width: 801px )
    .pokemon-card
        col(1/4, uncycle: 2, cycle: 4)
        margin-bottom 2rem

/*  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - 
 *	TABLET
 *  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
 */

@media screen and ( max-width: 800px ) and ( min-width 500px )

    .pokemon-card
        col(1/3, uncycle: 2, cycle: 3)
        margin-bottom 1.5rem
